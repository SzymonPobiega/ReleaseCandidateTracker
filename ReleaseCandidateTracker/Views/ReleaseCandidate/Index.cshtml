@model ReleaseCandidateTracker.Models.ReleaseCandidateList

@{
    ViewBag.Title = "Release candidate list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Release candidates</h2>

<table>
    <tr>
        <th>
            ProductName
        </th>
        <th>
            CreationDate (UTC)
        </th>
        <th>
            State
        </th>
        <th>
            VersionNumber
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model.Items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VersionNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { versionNumber = item.VersionNumber }) |
            @Html.ActionLink("Details", "Details", new { versionNumber = item.VersionNumber }) |
            @Html.ActionLink("Deploy", "GetScript", "ReleaseCandidateApi", new { versionNumber = item.VersionNumber }, new object())
        </td>
    </tr>
}
</table>
<div id="nextPage">
@if (!Model.First) {
@Html.ActionLink("<< Prev", "Index", new { page = Model.Page - 1 })
}
@if (!Model.First && !Model.Last) {<text>&nbsp;|&nbsp;</text>}
@if (!Model.Last) {
@Html.ActionLink("Next >>", "Index", new { page = Model.Page + 1 })
}
</div>